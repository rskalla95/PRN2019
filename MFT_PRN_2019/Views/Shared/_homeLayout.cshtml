@{
    ViewBag.SiteName = "SCE Core Website";
}
<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#002E5D">
    <title>@ViewBag.Title</title>
    @Html.RenderCdnStyles()
    @Styles.Render("~/sce-content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel='shortcut icon' href='//fhsscdn.byu.edu/SCE/5.0.4/content/favicon.ico' type='image/x-icon' />
    <link rel="stylesheet" href="~/Content/Site.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Slab" rel="stylesheet">
    @RenderSection("styles", required: false)
</head>
<body>
    @* Provides the flex styling for the sticky footer and defines the region of the page where visible elements live. Nothing out of this container should be visible. *@
    <div class="display-container">
        @Html.Partial("_Header")
        <div class="container main-content fullSceBox">
            @* All the real estate between header and footer should be inside of this div. *@
            @RenderBody()
        </div>
        @Html.Partial("_Footer")
    </div>
    @****************** Scripts ******************@
    @Html.RenderCdnScripts()
    @Scripts.Render("~/sce-content/js")
    @Scripts.Render("~/sce-bundles/core")
    @RenderSection("scripts", required: false)
</body>
</html>
