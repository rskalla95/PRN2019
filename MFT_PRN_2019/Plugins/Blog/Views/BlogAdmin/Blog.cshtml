@model SceBlog
@{
	ViewBag.Title = "Blog";
	bool CurrentUserIsAdmin = Byu.Fhss.Sce.Blog.Authorization.BlogAuthManager.CheckBloggerPermissions(HttpContext.Current.User.Identity.Name, Byu.Fhss.Sce.Blog.Authorization.PermissionLevels.Admin, Model.ID);
}

<center>
	<h2>@Model.BlogName <small>(Admin View)</small></h2>
	@if (CurrentUserIsAdmin)
	{
		<text>
			@Html.ActionLink("Edit Blog", "EditBlog", new { BlogName = Model.UrlName }, new { @class = "btn btn-default" })
			@Html.ActionLink("Manage Bloggers", "Bloggers", new { BlogName = Model.UrlName }, new { @class = "btn btn-default" })
			@Html.ActionLink("Set as Default Blog", "SetAsDefaultBlog", new { BlogName = Model.UrlName }, new { @class = "btn btn-default" })
		</text>
	}
	@Html.ActionLink("View Blog", "BlogFeed", "Blogs", new { BlogName = Model.UrlName }, new { @class = "btn btn-default" })
</center>

<div class="blog-options">
	<div>
		@Html.ActionLink("+ New Post", "NewPost", new { BlogName = Model.UrlName }, new { @class = "btn btn-success" })
		@Html.ActionLink("Back to Blogs", "Blogs", new { }, new { @class = "btn btn-secondary" })
	</div>
	@if (CurrentUserIsAdmin)
	{
		<div>
			@Html.ActionLink("Delete Blog", "DeleteBlog", new { BlogName = Model.UrlName }, new { @class = "btn btn-danger" })
		</div>
	}
</div>
<hr />






<div class="btn-group pull-right">
	<a class="btn btn-default">&laquo;</a>
	<a class="btn btn-default">1</a>
	<a class="btn btn-default">2</a>
	<a class="btn btn-default">3</a>
	<a class="btn btn-default">4</a>
	<a class="btn btn-default">5</a>
	<a class="btn btn-default">&raquo;</a>
</div>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Title</th>
			<th>Preview Text</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (Post post in Model.Posts)
		{
			@Html.Partial("_PostListItemPartial", post)
		}
	</tbody>
</table>

<div class="btn-group pull-right">
	<a class="btn btn-default">&laquo;</a>
	<a class="btn btn-default">1</a>
	<a class="btn btn-default">2</a>
	<a class="btn btn-default">3</a>
